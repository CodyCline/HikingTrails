@model HikingTrails.Models.Trail
<h1>Add A New Trail</h1>
<div class="container">
    <form asp-action="Check" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description">Description</label>
                <input class="form-control" asp-for="Description">
            </div>
        <div class="form-group">
            <span asp-validation-for="Length"></span>
            <label asp-for="Length">Trail Length</label>
            <input type="text" class="form-control" asp-for="Length">
        </div>    
        <div class="form-group">
            <span asp-validation-for="ElevationChange"></span>
            <label asp-for="Length">Elevation Change</label>
            <input class="form-control" asp-for="ElevationChange">
        </div>    
        <div class="form-group">
            <span asp-validation-for="Latitude"></span>
            <label asp-for="Latitude">Latitude</label>
            <input class="form-control" asp-for="Latitude">
        </div>
        <div class="form-group">
            <span asp-validation-for="Longitude"></span>
            <label asp-for="Longitude">Longitude</label>
            <input class="form-control" asp-for="Longitude">
        </div>
        <input class="btn btn-lg btn-danger" type="submit" value="Submit">
    </form>
</div>